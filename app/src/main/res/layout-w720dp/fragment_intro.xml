<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/green"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start-App"
        android:textAlignment="center"
        android:textSize="64sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginTop="24dp"
        android:text="Если Вас интересует разработка Android приложений, но Вы не можете найти программиста для Вашей задачи - посмотрите мои проекты, Демо-режим и оставте заявку, и в ближайшее время я свяжусь с Вами."
        android:textAlignment="center"
        android:textSize="32sp" />

    <android.support.v7.widget.CardView
        android:id="@+id/loginButton"
        android:layout_width="400dp"
        android:layout_height="72dp"
        android:layout_margin="12dp"
        app:cardCornerRadius="36dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:text="Войти"
            android:textAlignment="center"
            android:textSize="36sp"
            android:textStyle="bold" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/myProjectButton"
        android:layout_width="400dp"
        android:layout_height="72dp"
        android:layout_margin="12dp"
        app:cardCornerRadius="36dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:text="Мои проекты"
            android:textAlignment="center"
            android:textSize="36sp"
            android:textStyle="bold" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/demoButton"
        android:layout_width="400dp"
        android:layout_height="72dp"
        android:layout_margin="12dp"
        app:cardCornerRadius="36dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:text="Демо"
            android:textAlignment="center"
            android:textSize="36sp"
            android:textStyle="bold" />
    </android.support.v7.widget.CardView>


</LinearLayout>